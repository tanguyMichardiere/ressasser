{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"domains": {
			"next": "recommended",
			"project": "recommended",
			"react": "recommended"
		},
		"rules": {
			"recommended": true
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"useSortedAttributes": "on"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"overrides": [
		{
			// VSCode JSON files are actually JSONC
			"includes": [".vscode/*.json"],
			"json": {
				"parser": {
					"allowComments": true
				}
			}
		},
		{
			"includes": [
				// NextJS component files use default exports
				"src/app/**/default.tsx",
				"src/app/**/error.tsx",
				"src/app/**/layout.tsx",
				"src/app/**/loading.tsx",
				"src/app/**/not-found.tsx",
				"src/app/**/page.tsx",
				"src/app/**/template.tsx",
				"src/middleware.ts",
				// most config files use default exports
				"*.config.ts",
				"*.config.mjs"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			// globals.css is a TailwindCSS file
			"includes": ["src/app/globals.css"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnknownProperty": "off"
					}
				}
			}
		}
	]
}
